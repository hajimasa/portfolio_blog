---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

//microCMS呼び出し
import { getAbout } from "../library/microcms";
const about = await getAbout("about");
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
		main {
			margin: auto;
			padding: 1em;
			max-width: 60ch;
		}
		ul {
			list-style-type: none;
			padding: unset;
		}
		ul li {
			display: flex;
		}
		ul li :global(time) {
			flex: 0 0 130px;
			font-style: italic;
			color: #595959;
		}
		ul li a:visited {
			color: #8e32dc;
		}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="post" set:html={about.body}></div>
		</main>
		<Footer />
	</body>
</html>
