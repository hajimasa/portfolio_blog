---
import '../styles/global.css';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

//microCMS呼び出し
import { getAbout } from "../library/microcms";
const about = await getAbout("about");
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col min-h-screen bg-gradient-to-br from-[#4CAF50] via-[#8BC34A] to-[#CDDC39] bg-[length:400%_400%] animate-gradient-organic">
		<Header />
		<main class="container px-5 py-24">
			<div class="text-xl font-medium text-white title-font mb-2" set:html={about.body.replace(/\n/g, '<br>')}></div>
		</main>
		<Footer />
	</body>
</html>
